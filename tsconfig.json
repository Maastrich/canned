{
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "**/__stories__/**",
    "**/__tests__/**"
  ],
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "declarationDir": ".",
    "jsx": "react"
  }
}
