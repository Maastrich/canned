{
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "**/__stories__/**", "**/__tests__/**"],
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "declarationDir": ".",
    "jsx": "react"
  }
}
